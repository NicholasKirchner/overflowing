<h1><%= @post.title %></h1>

<div class="post_full">  
  <img src="<%=  @post.image_url %>"/>
</div>
<% if current_user %>
  <div class = "comment_form">
    <%= form_for [@post, @comment]  do |f| %>
      <%= f.label :comment  %>
      <%= f.text_field :content %>
      <%= f.submit "Submit" %>
    <% end %>
  </div>
<% else %>
  <%= link_to "Please Login to comment", new_session_path %>
<% end %>

<%= render @comments %>
